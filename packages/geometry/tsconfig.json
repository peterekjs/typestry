{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "declarationDir": "./dist",
    "composite": true,
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "ESNext.Decorators"]
  }
}
